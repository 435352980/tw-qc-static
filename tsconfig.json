  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2019", "DOM"],
    "paths": {
      "@/*": ["src/*"]
